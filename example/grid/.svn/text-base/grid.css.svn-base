#grid-helper {
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	z-index: 99999;
	pointer-events: none;
	background-repeat: repeat-y;
	background-attachment: scroll;
	background-position: center top;
	opacity: 0.6;
}

@media all and (max-width: 1024px) {
	#grid-helper {
		background-image: url("960-12-col.png");
	}
}

@media all and (min-width: 1024px) {
	#grid-helper {
		background-image: url("1200-16-col.png");
	}
}
